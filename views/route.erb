<% content_for :title do %>Route<% end %>
<% content_for :description do %>Route Detail<% end%>

<h2 class="p-3" style="background-color:#<%= route['route_color'] %>;color:#<%= route['route_text_color'] %>"><img src="/assets/images/<%= route['route_type'] %>.svg" style="height:1.1em;vertical-align:text-bottom;" /> <strong><%= route['route_short_name'] %></strong> - <%= route['route_long_name'] %></h2>

<% if trips.count > 0 %>
<div class="row">
  <div class="col-md-6">
    <h4>Outbound</h4>
    <%= erb 'partials/time_table'.to_sym, locals: { trips: trips, direction: "1" } %>
  </div>
  <div class="col-md-6">
    <h4>Inbound</h4>
    <%= erb 'partials/time_table'.to_sym, locals: { trips: trips, direction: "0" } %>
  </div>
</div>
<% else %>
<div class="alert alert-info">No trips scheduled for today.</div>
<% end %>

<br />

<script>
  var GTFS_BASE_URL = '<%= ENV['GTFS_BASE_URL'] %>'
</script>

<script src="//unpkg.com/jquery@3.3.1/dist/jquery.min.js"></script>
<script src="//unpkg.com/handlebars@4.5.3/dist/handlebars.min.js"></script>
<script src="//unpkg.com/bootstrap@4.1.3/dist/js/bootstrap.min.js"></script>
<script src="/assets/javascript/routes.js"></script>
